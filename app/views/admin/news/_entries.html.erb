

<table>
	<thead>
		<tr>
			<th><%= :title %></th>
			<th><%= :body %></th>
			<th><%= :publisher %></th>
			<th><%= :avatar %></th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @news.each do |new| %>
		<tr>
			<td><%= new.title %></td>
			<td><%= new.body %></td>
			<td><%= new.publisher %></td>
			<td><%= image_tag new.avatar(:thumb) %></td>
			<td>
				<%= link_to "edit", edit_admin_news_path(new), :title => :edit, :class => "edit" %>&nbsp;
				<%= link_to "delete", admin_news_path(new), :method => :delete, :confirm => :delete, :title => :delete, :class => "delete" %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>